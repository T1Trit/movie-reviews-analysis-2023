# =============================================================================
# НАСТРОЙКИ ПРОЕКТА АНАЛИЗА ОТЗЫВОВ ФИЛЬМОВ + TELEGRAM BOT
# Скопируйте этот файл как .env и заполните реальными значениями
# НИКОГДА не коммитьте .env файл в git!
# =============================================================================

# -----------------------------------------------------------------------------
# TELEGRAM BOT НАСТРОЙКИ
# -----------------------------------------------------------------------------
# Токен бота от @BotFather (ОБЯЗАТЕЛЬНО)
BOT_TOKEN=your_bot_token_from_botfather

# Лимиты пользователей
MAX_REQUESTS_PER_HOUR=10
MAX_REQUESTS_PER_DAY=50
MAX_CONCURRENT_REQUESTS=5

# Режим работы бота
WEBHOOK_MODE=false
WEBHOOK_URL=https://yourdomain.com
WEBHOOK_PORT=8443
WEBHOOK_PATH=/webhook

# -----------------------------------------------------------------------------
# ПАРСИНГ КИНОПОИСКА
# -----------------------------------------------------------------------------
# Настройки для парсинга отзывов
MAX_REVIEWS_PER_MOVIE=50
KINOPOISK_DELAY=2.0
REQUEST_TIMEOUT=30

# User-Agent для запросов
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# -----------------------------------------------------------------------------
# КЭШИРОВАНИЕ И БАЗЫ ДАННЫХ
# -----------------------------------------------------------------------------
# Кэширование результатов
CACHE_TTL=3600
ENABLE_CACHE=true
CACHE_MAX_SIZE=1000

# База данных (SQLite по умолчанию)
DATABASE_URL=sqlite:///telegram_bot/data/bot.db

# Redis для продвинутого кэширования (опционально)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_ENABLED=false

# -----------------------------------------------------------------------------
# ЛОГИРОВАНИЕ И МОНИТОРИНГ
# -----------------------------------------------------------------------------
# Уровни: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=telegram_bot/logs/bot.log
LOG_ROTATION=1 day
LOG_RETENTION=7 days

# Структурированное логирование
STRUCTURED_LOGGING=true

# Sentry для отслеживания ошибок (опционально)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# АНАЛИЗ НАСТРОЕНИЙ
# -----------------------------------------------------------------------------
# VADER Sentiment настройки
SENTIMENT_THRESHOLD_POSITIVE=0.05
SENTIMENT_THRESHOLD_NEGATIVE=-0.05
SENTIMENT_LANGUAGE=ru

# Кэширование результатов анализа
SENTIMENT_CACHE_ENABLED=true
SENTIMENT_CACHE_TTL=86400

# -----------------------------------------------------------------------------
# ВИЗУАЛИЗАЦИЯ И ГРАФИКИ
# -----------------------------------------------------------------------------
# Настройки matplotlib
MATPLOTLIB_BACKEND=Agg
FIGURE_DPI=100
FIGURE_SIZE_WIDTH=12
FIGURE_SIZE_HEIGHT=8

# Цветовая схема
COLOR_SCHEME=default
CHART_STYLE=seaborn-v0_8

# Размеры файлов
MAX_IMAGE_SIZE_MB=5
IMAGE_QUALITY=85

# -----------------------------------------------------------------------------
# ФАЙЛОВАЯ СИСТЕМА
# -----------------------------------------------------------------------------
# Пути к директориям
DATA_DIR=telegram_bot/data
LOGS_DIR=telegram_bot/logs
STATIC_DIR=telegram_bot/static
CACHE_DIR=telegram_bot/data/cache
TEMP_DIR=telegram_bot/data/temp

# Автоочистка временных файлов
AUTO_CLEANUP_ENABLED=true
TEMP_FILE_TTL=3600

# Максимальные размеры
MAX_FILE_SIZE_MB=20
MAX_TEMP_FILES=100

# -----------------------------------------------------------------------------
# БЕЗОПАСНОСТЬ
# -----------------------------------------------------------------------------
# Секретный ключ для подписи данных
SECRET_KEY=your_secret_key_here

# Ограничения безопасности
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=3600
BLOCK_DURATION=3600

# Разрешенные пользователи (пусто = все)
ALLOWED_USERS=
ADMIN_USERS=

# -----------------------------------------------------------------------------
# ПРОИЗВОДИТЕЛЬНОСТЬ
# -----------------------------------------------------------------------------
# Асинхронные настройки
MAX_WORKERS=4
ASYNCIO_TIMEOUT=30
CONNECTION_POOL_SIZE=10

# Оптимизация памяти
MEMORY_LIMIT_MB=512
GC_THRESHOLD=100

# Таймауты
REQUEST_TIMEOUT=30
SCRAPING_TIMEOUT=60
ANALYSIS_TIMEOUT=120

# -----------------------------------------------------------------------------
# STREAMLIT НАСТРОЙКИ
# -----------------------------------------------------------------------------
# Если запускаете Streamlit дашборд
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME_PRIMARY_COLOR=#FF6B6B
STREAMLIT_THEME_BACKGROUND_COLOR=#FFFFFF

# -----------------------------------------------------------------------------
# РАЗРАБОТКА И ОТЛАДКА
# -----------------------------------------------------------------------------
# Режим разработки
DEBUG=false
DEVELOPMENT_MODE=false

# Тестовые данные
USE_TEST_DATA=false
TEST_MOVIE_IDS=1318972,1202258,1143242

# Профилирование производительности
ENABLE_PROFILING=false
PROFILE_DIR=telegram_bot/profiles

# Мокирование внешних сервисов
MOCK_KINOPOISK=false
MOCK_SENTIMENT=false

# -----------------------------------------------------------------------------
# ИНТЕГРАЦИЯ С СУЩЕСТВУЮЩИМ ПРОЕКТОМ
# -----------------------------------------------------------------------------
# Пути к данным основного проекта
MAIN_DATA_DIR=data
PROCESSED_DATA_DIR=data/processed
NOTEBOOKS_DIR=notebooks

# Использование готовых данных
USE_EXISTING_DATA=true
EXISTING_DATA_FILE=data/processed/reviews_2023_final.csv

# Синхронизация с Streamlit
SYNC_WITH_STREAMLIT=true
STREAMLIT_DATA_SHARING=true

# -----------------------------------------------------------------------------
# ЯЗЫКОВЫЕ НАСТРОЙКИ
# -----------------------------------------------------------------------------
# Основной язык интерфейса
DEFAULT_LANGUAGE=ru
SUPPORTED_LANGUAGES=ru,en

# Локализация сообщений
TIMEZONE=Europe/Moscow
DATE_FORMAT=%d.%m.%Y
TIME_FORMAT=%H:%M:%S

# -----------------------------------------------------------------------------
# ДОПОЛНИТЕЛЬНЫЕ API КЛЮЧИ (если нужны)
# -----------------------------------------------------------------------------
# Для расширенного функционала
TMDB_API_KEY=
OMDB_API_KEY=

# Переводчики для мультиязычности
GOOGLE_TRANSLATE_API_KEY=
YANDEX_TRANSLATE_API_KEY=

# -----------------------------------------------------------------------------
# DOCKER НАСТРОЙКИ (для контейнеризации)
# -----------------------------------------------------------------------------
# Если используете Docker
DOCKER_MODE=false
CONTAINER_NAME=movie-reviews-bot
HOST_DATA_VOLUME=/data
HOST_LOGS_VOLUME=/logs

# -----------------------------------------------------------------------------
# ПРИМЕРЫ ЗАПОЛНЕНИЯ
# -----------------------------------------------------------------------------
# BOT_TOKEN=1234567890:ABCdefGhIjKlMnOpQrStUvWxYz
# REDIS_URL=redis://localhost:6379/0
# DATABASE_URL=postgresql://user:pass@localhost:5432/moviebot
# SENTRY_DSN=https://key@sentry.io/project

# -----------------------------------------------------------------------------
# ЗАМЕТКИ:
# 1. Получите токен бота у @BotFather в Telegram
# 2. Для production устанавливайте DEBUG=false
# 3. Используйте Redis для лучшего кэширования
# 4. Настройте Sentry для мониторинга ошибок
# 5. Регулярно очищайте логи и временные файлы
# -----------------------------------------------------------------------------